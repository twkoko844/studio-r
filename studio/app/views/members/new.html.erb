<div class="lbody">
<% @page_title = "会員登録" %>
<h2><%= @page_title %></h2>
<div class="box">
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h3><%= @member.errors.count %>件のエラーが発生しました。</h3>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li>そのemailはすでに使われています</li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= form_for @member do |form| %>
<%= render "form", form: form %>
<p><%= form.submit "登録" %></p>
<% end %>
</div>
</div>
